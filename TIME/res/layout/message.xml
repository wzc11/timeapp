<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/indextop"
        android:layout_width="fill_parent"
        android:layout_height="50dp"   
       >   
        <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:src="@drawable/liuyantab"
        android:scaleType="centerCrop"
         />
        <Button
      		android:id="@+id/backbtn"
     		android:layout_width="37dp"
 		    android:layout_height="35dp"
 		    android:layout_alignParentLeft="true"
 		    android:background="@drawable/back1"
 		    android:layout_centerVertical="true"
 		    android:gravity="center_horizontal"
      />
        <Button
            android:id="@+id/liubtn"
            android:layout_width="43dp"
            android:layout_height="28dp"
            android:layout_marginRight="7dp"
         	android:layout_alignParentRight="true"
         	android:layout_centerVertical="true"
            android:background="@drawable/lliubtn"
             />
     </RelativeLayout>
		
  		<FrameLayout android:id="@id/android:tabcontent"
  			android:layout_height="fill_parent"
  			android:layout_width="fill_parent"
  			> 
  			
			<LinearLayout android:id="@+id/list1"	
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="#EAEAEA"
  				android:orientation="vertical"
  				>
				<TextView 
				     android:id="@+id/oldtop"
       				 android:layout_width="fill_parent"
       				 android:layout_height="wrap_content" 
       				 android:textColor="#68838B"
       				 android:textSize="20dp"
       				 android:layout_margin="20dp"
					></TextView>
				<RelativeLayout 
				    android:layout_width="fill_parent"
  					android:layout_height="fill_parent"
  					android:orientation="vertical"
  					android:background="#EAEAEA"
				    >
  				<ListView
  				    android:id="@+id/listview1"
  				    android:layout_width="fill_parent"
					android:layout_height="fill_parent"
  				    android:layout_marginLeft="20dp"
   					android:layout_marginRight="20dp"
   					android:layout_marginBottom="15dp"
  				    android:layout_above="@+id/btmlay1"
  				    android:divider="#C1CDCD"
  				    android:dividerHeight="1px"
  				    android:transcriptMode="alwaysScroll"
  				    android:cacheColorHint="#00000000" >

  				</ListView> 
  				<RelativeLayout
   				    android:id="@+id/btmlay1"
    				android:layout_width="fill_parent"
    				android:layout_height="50dp"
    				android:background="@drawable/readtop"
    				android:layout_alignParentBottom="true"
    				android:orientation="horizontal"  >
    				<EditText
        				android:id="@+id/exmessagetext"
        				android:layout_width="fill_parent"
        				android:layout_height="40dp"
        				android:layout_centerVertical="true"
        				android:layout_marginRight="10dp"
        				android:layout_marginLeft="20dp"
        				
		   	 			android:focusableInTouchMode="true"
        				android:layout_toLeftOf="@+id/exsubmit"
        				android:background="@drawable/editchat"
        				android:hint="说说上一期讲座吧"
      				/>
					<Button
	    				android:id="@+id/exsubmit" 
						android:layout_width="50dp"
						android:layout_height="40dp"
						android:layout_marginRight="10dp" 		
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:background="@drawable/sendbt"/>
				</RelativeLayout>  
			   </RelativeLayout>			
  			</LinearLayout>

			
  			<LinearLayout android:id="@+id/list2"	
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:orientation="vertical"
  				android:background="#EAEAEA"
  				>
				<TextView 
				     android:id="@+id/furtop"
       				 android:layout_width="fill_parent"
       				 android:layout_height="wrap_content"
       				 android:textColor="#68838B"
       				 android:textSize="20dp"
       				 android:layout_margin="20dp" 
					></TextView>
				<RelativeLayout 
				    android:layout_width="fill_parent"
  					android:layout_height="fill_parent"
  					android:orientation="vertical"
  					android:background="#EAEAEA"
				    >
  				<ListView
  				    android:id="@+id/listview2"
  				    android:layout_width="fill_parent"
  				    android:layout_height="fill_parent"
  				    android:layout_marginLeft="20dp"
   					android:layout_marginRight="20dp"
   					android:layout_marginBottom="15dp"
  				    android:layout_above="@+id/btmlay"
  				    android:divider="#C1CDCD"
  				    android:dividerHeight="1px"
  				    android:transcriptMode="alwaysScroll" 
  				    android:cacheColorHint="#00000000" >

  				</ListView> 
  				<RelativeLayout
  				    android:id="@+id/btmlay"
    				android:layout_width="fill_parent"
    				android:layout_height="50dp"
    				android:background="@drawable/readtop"
    				android:layout_alignParentBottom="true"
    				android:orientation="horizontal"  >
  				<EditText
        				android:id="@+id/foremessagetext"
        				android:layout_width="fill_parent"
        				android:layout_height="40dp"
        				android:layout_centerVertical="true"
        				android:layout_marginRight="10dp"
        				android:layout_marginLeft="20dp"
        				android:singleLine="true"
        				
		    			android:focusableInTouchMode="true"
        				android:layout_toLeftOf="@+id/foresubmit"
        				android:background="@drawable/editchat"
        				android:hint="畅想下未来讲座吧"
      				/>
					<Button
	    				android:id="@+id/foresubmit" 
						android:layout_width="50dp"
						android:layout_height="40dp"
						android:layout_marginRight="10dp" 		
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:background="@drawable/sendbt"
		 				/>
				</RelativeLayout>  				
			   </RelativeLayout>	
  			</LinearLayout>
		</FrameLayout>
    
    


</LinearLayout>